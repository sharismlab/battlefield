{
  "name": "zhuawei",
  "version": "0.0.0",
  "manifest_version": 2,

  "description": "微薄抓取工具",
  "icons": { "16": "image/icon16.png",
             "48": "image/icon48.png",
             "128": "image/icon128.png" },

  "page_action": {
    "default_icon": "image/icon48.png",
    "default_title": "",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
        "library/jquery.js",
        "library/underscore.js",
        "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*.weibo.com/*", "*://weibo.com/*"],
      "run_at": "document_end",
      "js": ["library/jquery.js", "library/underscore.js", "zhuawei.js"]
    }
  ],
  "permissions": [
    "tabs", "storage", "background", "*://*/"
  ]
}
